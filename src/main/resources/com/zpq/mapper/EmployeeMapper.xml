<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zpq.mapper.EmployeeMapper">
    <!-- List<Employee> getEmployeeByStoreId(@Param("storeId") int storeId); -->
    <select id="getEmployeeByStoreId" resultType="employee">
        select * from employee where store_id = #{storeId} and status != 0
    </select>
    <!-- String getStartTime(@Param("id") int id); -->
    <select id="getStartTime" resultType="String">
        select start_time from employee where id = #{id} and status != 0
    </select>
    <!-- String getEndTime(@Param("id") int id); -->
    <select id="getEndTime" resultType="String">
        select end_time from employee where id = #{id} and status != 0
    </select>
</mapper>